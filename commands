*** COMMANDS ***

	byte	command (see below)
	byte*	arguments

	bit		7	6	5	4	3		2	1	0


			0	0	0	0	0						0x00	command 0
			...
			1	1	1	1	1						0xf8	command 31

									0	0	0		0x00	i/o 0
									...
									1	1	1		0x07	i/o 7

			0	0	0	0	0		0	0	0		0x00	identify, returns: 0x4a 0xfb AA BB 5*CC DD where AA=numeric device id, BB=firmware version, CC=ascii id string
			0	0	0	0	0		0	0	1		0x01	long command, rest follows after this byte

			0	0	0	1	0						0x10	read counter, returns 4 bytes
			0	0	1	0	0						0x20	write counter, supply 4 bytes
			0	0	1	1	0						0x30	reset counter
			0	1	0	0	0						0x40	read/reset counter, returns like read counter

			0	1	0	1	0						0x50	read input, returns 1 byte
			0	1	1	0	0						0x60	write output, supply 1 byte

			0	1	1	1	0						0x70	read pwm value, returns 1 byte
			1	0	0	0	0						0x80	write pwm value, supply 1 byte

			1	0	0	1	0						0x90	read pwm mode, returns 1 byte
			1	0	1	0	0						0xa0	write pwm mode, supply 1 byte

			1	0	1	1	0						0xb0	start adc conversion
			1	1	0	0	0		0	0	0		0xc0	read adc, returns 2 bytes
			1	1	0	0	0		0	0	1		0xc1	timer0 status, returns 1 byte, 0 = stopped, 1 = prescaler value

			1	1	0	1	0		0	0	0		0xd0	twi stats - disable
			1	1	0	1	0		0	0	1		0xd1	twi stats - enable
			1	1	0	1	0		0	1	0		0xd2	twi stats - read start conditions		returns AA BB as msb lsb.
			1	1	0	1	0		0	1	1		0xd3	twi stats - read stop conditions		returns AA BB as msb lsb.
			1	1	0	1	0		1	0	0		0xd4	twi stats - read error conditions		returns AA BB as msb lsb.
			1	1	0	1	0		1	0	1		0xd5	twi stats - read overflow conditions	returns AA BB as msb lsb.
			1	1	0	1	0		1	1	0		0xd6	twi stats - read local frames			returns AA BB as msb lsb.
			1	1	0	1	0		1	1	1		0xd7	twi stats - read idle calls				returns AA BB as msb lsb.

			1	1	1	0	0						0xe0	read output, returns 1 byte

	pwm mode =
			0	on
			1	fade in
			2	fade out
			3	fade in/out

*** REPLY ***
	
	byte	length of reply - this length byte
	byte	command this reply relates to
	byte	command this reply relates to (repeat)
	byte	error code
	byte*	reply information
	byte	checksum

	error codes =
			0	ok
			1	no command
			2	unknown command
			3	parameter out of range
			4	missing parameter(s)
			5	not ready
			6	internal error

*** MODELS ***

	MODEL 6 (ATTINY861A), VERSION 0

		counters:

			0	b6
			1	a6

		inputs:

			0	b6
			1	a6

		outputs:

			0	b3
			1	b4
			2	a3
			3	a4

		pwms:

			0	b3
			1	b4
			2	a3
			3	a4

		adcs:

			0	a7
			1	temperature

		commands

			0x00	identify
			0x1x	read counter
			0x2x	write counter
			0x3x	reset counter
			0x4x	read/reset counter
			0x5x	read input
			0x6x	write output
			0x7x	read pwm
			0x8x	write pwm
			0xbx	start adc conversion
			0xc0	read adc
			0xd0	twi stats - disable
			0xd1	twi stats - enable
			0xd2	twi stats - read start conditions
			0xd3	twi stats - read stop conditions
			0xd4	twi stats - read error conditions
			0xd5	twi stats - read overflow conditions
			0xd6	twi stats - read local frames
			0xd7	twi stats - read idle calls
			0xe0	read output				x:0=b3/1=b4/2=a3/3=a4
